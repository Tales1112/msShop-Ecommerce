@model msShop.ViewModels.UsuarioLogin


@{
    ViewData["Title"] = "Log in";
}
@section scripts{
<script>
    function myFunction() {
      var x = document.getElementById("myInput");
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password";
      }
    }
</script>

}



<!-- ========================================= MAIN ========================================= -->
<main id="authentication" class="inner-bottom-md">
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <section class="section sign-in inner-right-xs">
                    <img src="~/imagens/login.jpg" alt="Default" />
                </section><!-- /.sign-in -->
            </div><!-- /.col -->

            <div class="col-md-6">
                <section class="section sign-in inner-right-xs">
                    <h2 class="bordered">Login Cliente</h2>
                    <p>Faça Login para entrar na sua conta</p>
                    <div class="social-auth-buttons">
                        <div class="row">
                            <div class="col-md-6">
                                <button class="btn-block btn-lg btn btn-facebook"><i class="fa fa-facebook"></i> Entre com o Facebook</button>
                            </div>
                            <div class="col-md-6">
                                 <partial name="_LoginGooglePartial" />
                                @* <button class="btn-block btn-lg btn btn-google"><i class="fa fa-google-plus-official"></i> Entre com o Google</button>*@
                            </div>
                        </div>
                    </div>
                    <form id="account" method="post" role="form" class="login-form cf-style-1">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="field-row">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="le-input form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="field-row">
                            <label asp-for="Senha"></label>
                            <input asp-for="Senha" type="password" id="myInput" class="le-input form-control-lg" />
                            <input asp-for="Senha" type="checkbox" class="le-checbox content-color auto-width inline" onclick="myFunction()" /> Show Password
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div><!-- /.field-row -->

                        <div class="field-row clearfix">
                            <span class="pull-left">
                                <label class="content-color" asp-for="RememberMe">
                                    <input asp-for="RememberMe" class="le-checbox auto-width inline" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </span>
                            <span class="pull-right">
                                <a id="forgot-password" asp-controller="ForgotPassword" asp-action="Index" class="content-color bold">Forgot your password?</a>
                            </span>
                        </div>
                        <div class="buttons-holder">
                            <button type="submit" class="le-button huge btn-lg">Entrar</button>
                        </div><!-- /.buttons-holder -->
                    </form><!-- /.cf-style-1 -->

                </section><!-- /.sign-in -->
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container -->
</main><!-- /.authentication -->
<!-- ========================================= MAIN : END ========================================= -->